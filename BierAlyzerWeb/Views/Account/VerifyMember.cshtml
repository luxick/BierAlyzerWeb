@model BierAlyzerWeb.Models.Account.VerifyMemberModel

@{
    ViewData["Title"] = "DD Mitglied Bestätigen";
}

<h4>Angaben zur Mitgliedschaft</h4>
<label>Hey @Model.UserName</label>
<label>Wenn deine Hex ID bestätigt ist wirst du in Event Listen mit einem DD Emblem angezeigt.</label>
<form asp-action="VerifyMember">
    <div class="form-group">
        <label asp-for="Chapter" class="bmd-label-static">Zu Welchem DD Chapter gehörst du?</label>
        <input asp-for="Chapter" class="form-control" />
    </div>
    <div>
        <label asp-for="HexId" class="bmd-label-static">Wie lautet deine HEX ID?</label>
        <input asp-for="HexId" class="form-control" />
    </div>
    <div>
        <label asp-for="MessageToAdmin" class="bmd-label-static">Möchtest du den Entwicklern irgentwas mitteilen?</label>
        <input asp-for="MessageToAdmin" class="form-control"/>
    </div>
    <div style="margin-top: 1.5rem;">
        <button type="submit" class="btn btn-default" style="width: 100%;"><i class="fa fa-save"></i> Absenden</button>
    </div>
</form>
