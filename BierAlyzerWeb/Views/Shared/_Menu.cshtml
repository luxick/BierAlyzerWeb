<div class="row">
    <div class="col">
        <a asp-controller="Home" asp-action="Events" class="btn btn-sm btn-default" style="width: 100%; color: #000;">
            Meine Events
        </a>
    </div>
    <div class="col text-right">
        <a asp-controller="Home" asp-action="UserProfile" class="btn btn-sm btn-default" style="color: #000;" title="Mein Profil">
            <i class="fas fa-user-circle"></i>
        </a>
        <button class="btn btn-sm btn-default" title="Ausloggen" data-toggle="modal" data-target="#logoutModal">
            <i class="fas fa-sign-out-alt"></i>
        </button>
    </div>
</div>
<hr />

<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ausloggen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="padding-top: 5px;">
                Ausloggen?
            </div>
            <div class="modal-footer">
                <a class="btn btn-default" style="color: #000;" asp-controller="Account" asp-action="Logout">Ausloggen!</a>
            </div>
        </div>
    </div>
</div>