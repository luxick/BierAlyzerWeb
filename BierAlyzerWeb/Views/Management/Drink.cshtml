@model BierAlyzerWeb.Models.Management.ManageDrinkModel

@{
    ViewData["Title"] = string.Format("Management - {0} bearbeiten", Model.Name);
}

<h5>@Model.Name</h5>

@if (ViewData["SuccessMessage"] != null)
{
    var message = ViewData["SuccessMessage"].ToString();

    if (message != null)
    {
        <div class="alert alert-success" role="alert">
            <div>@message</div>
        </div>
    }
}

<div class="card" style="margin-top: 15px;">
    <div class="card-body" style="padding: 15px 15px 15px 15px;">
        <div class="row">
            <div class="col-12">
                <strong>Menge</strong>: @Model.Amount l
            </div>
            <div class="col-12">
                @Model.Percentage %vol.
            </div>
            <div class="col-12">
                @(Model.UsageCount)x verwendet
            </div>
        </div>
    </div>
</div>

<form asp-action="Drink">
    <input type="hidden" asp-for="DrinkId" />
    <div style="margin-top: 10px;">
        <div class="form-group">
            <label asp-for="Name" style="margin-bottom: 0;" class="bmd-label-static">Name</label>
            <input asp-for="Name" class="form-control" style="width: 100%;" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div style="margin-top: 1.5rem;">
        <button type="submit" class="btn btn-default" style="width: 100%;"><i class="fa fa-save"></i> Speichern</button>
    </div>
</form>